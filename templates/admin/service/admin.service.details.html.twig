{% extends 'admin/admin.base.html.twig' %}
{% block body %}
    <div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-offset-2 col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Service à modifier</h4>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        <form action="{{ path("admin-service-modify") }}" method="post"
                                              enctype="multipart/form-data">
                                            <div class="form-group">
                                                <input type="hidden" id="service_id" name="service[id]" value="{{ service.id }}">

                                                {% if service.imgpath != "" %}
                                                    <figure>
                                                        <img style="width: 200px" src="{{ asset(service.imgpath) }}" alt="">
                                                    </figure>
                                                {% endif %}
                                                <input type="file" id="service_imgpath" name="service[imgpath]" value="{{ service.imgpath }}">
                                            </div>
                                            <div class="form-group">
                                                <label for="service_title" class="bmd-label-floating">Titre</label>
                                                <input type="text" class="form-control" id="service_title"
                                                       name="service[title]" maxlength="40" value="{{ service.title }}">
                                            </div>

                                            <div class="form-group">
                                                <label for="service_desc" class="bmd-label-floating">Description</label>
                                                <input type="text" class="form-control" id="service_desc"
                                                       name="service[desc]" maxlength="100" value="{{ service.desc }}">
                                            </div>
                                            {{ form_widget(form._token) }}
                                            <button type="submit" class="btn btn-primary pull-right">Mettre à jour
                                            </button>
                                            <div class="clearfix"></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}