{% extends 'admin/admin.base.html.twig' %}
{% block body %}
    <div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-offset-2 col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Photo à modifier</h4>
                        <p class="card-category"></p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        <form action="{{ path("admin-gallery-modify") }}" method="post"
                                              enctype="multipart/form-data">
                                            <div class="form-group">
                                                <input type="hidden" id="gallery_id" name="gallery[id]" value="{{ gallery.id }}">

                                                {% if gallery.imgpath != "" %}
                                                    <figure>
                                                        <img style="width: 200px" src="{{ asset(gallery.imgpath) }}" alt="">
                                                    </figure>
                                                {% endif %}
                                                <input type="file" id="gallery_imgpath" name="gallery[imgpath]" value="{{ gallery.imgpath }}">
                                            </div>
                                            <div class="form-group">
                                                <label for="gallery_title" class="bmd-label-floating">Titre</label>
                                                <input type="text" class="form-control" id="gallery_title"
                                                       name="gallery[title]" maxlength="40" value="{{ gallery.title }}">
                                            </div>

                                            <div class="form-group">
                                                <label for="gallery_desc" class="bmd-label-floating">Description</label>
                                                <input type="text" class="form-control" id="gallery_desc"
                                                       name="gallery[desc]" maxlength="100" value="{{ gallery.desc }}">
                                            </div>
                                            <div class="form-group">
                                                <label for="gallery_category" class="bmd-label-floating">Catégorie</label>
                                                <input type="text" class="form-control" id="gallery_category"
                                                       name="gallery[category]" maxlength="100" value="{{ gallery.category }}">
                                            </div>
                                            {{ form_widget(form._token) }}
                                            <button type="submit" class="btn btn-primary pull-right">Mettre à jour
                                            </button>
                                            <div class="clearfix"></div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}